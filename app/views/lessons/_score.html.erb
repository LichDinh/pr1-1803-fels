<h3> Score: <%= @lesson.score_cal %>/5</h3>
<div class="row">
  <div class="col-md-7 col-md-offset-3">
    <%= form_for(@lesson) do |f| %>
        <%= f.fields_for(:lesson_words) do |ff| %>
          <%= f.label :name, ff.object.word.name %><br />
            <% ff.object.word.answers.each do |item| %>
              <%= ff.radio_button :selected_answer,  item.id, :checked => item.id == ff.object.selected_answer , :disabled => true%> 
              <%= item.name %>
            <% end %>
            <br>
            <%= ff.object.result %> 
            <br>
        <% end %>
    <% end %>
  </div>
</div>

